{
  "name": "quiz-web-system",
  "private": true,
  "repository": "https://github.com/hal-shu-sato/quiz-web-system.git",
  "license": "UNLICENSED",
  "author": "ato lash <28973861+hal-shu-sato@users.noreply.github.com>",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "run-s build:server build:client",
    "build:client": "yarn workspace quiz-web-system-client build",
    "build:server": "yarn workspace quiz-web-system-server build",
    "dev": "run-p dev:server dev:client",
    "dev:client": "yarn workspace quiz-web-system-client dev",
    "dev:server": "yarn workspace quiz-web-system-server dev",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write .",
    "lint": "run-s -c lint:ts lint:eslint lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:ts": "run-p lint:ts:client lint:ts:server",
    "lint:ts:client": "yarn workspace quiz-web-system-client lint:ts",
    "lint:ts:server": "yarn workspace quiz-web-system-server lint:ts",
    "prepare": "husky",
    "start": "run-p start:*",
    "start:client": "yarn workspace quiz-web-system-client start",
    "start:server": "yarn workspace quiz-web-system-server start"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
